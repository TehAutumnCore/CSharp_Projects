@model Blog.Models.BlogPost
@{
    ViewData["Title"] = "Delete Blog Post";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <h2 class="mb-4 text-center text-danger">Are you sure?</h2>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title">@Model.Title</h4>
                    <p class="card-text">@Model.Description</p>
                    <small class="text-muted">
                        <strong>Author:</strong> @Model.Author |
                        <strong>Date:</strong> @Model.Date.ToShortDateString()
                    </small>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
