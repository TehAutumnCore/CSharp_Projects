@model List<Blog.Models.BlogPost>
@{
    ViewData["Title"] = "Blog Index";
}


<div class="container py4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <a class="btn btn-success" asp-controller="BlogView" asp-action="Create">+Create New Post</a>
    </div>
</div>

@if(!Model.Any())
{
    <div class="alert alert-info">No Blog Posts available.</div>
}
else {
    @foreach(var post in Model) 
    {
        <div class="card mb-4 shadow-sm">
            <div class=" card-body">
                <h3 class="card-title">@post.Title</h3>
                <p class="card-text">@post.Description</p>
                <small class="text-muted">
                    <strong>Author:</strong>@post.Author |
                    <strong>Date:</strong>@post.Date.ToShortDateString()
                </small>
                <div class="mt-3">
                    <a class="btn btn-sm btn-outline-primary me-2" asp-controller="BlogView" asp-action="Edit" asp-route-id="@post.Id"> Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-controller="BlogView" asp-action="Delete" asp-route-id="@post.Id"> Delete</a>
                </div>
            </div>
        </div>
    }
}


